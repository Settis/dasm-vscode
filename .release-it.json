{
  "github": {
    "release": true,
    "assets": ["*.vsix"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "npx vsce ls-publishers | grep settis",
      "npm run clean", 
      "npm run lint",
      "npm run compile",
      "npm run test-compile",
      "cd client && npm run test",
      "cd server && npm run test",
      "npm run test"
    ],
    "after:bump": [
      "rm -f *.vsix",
      "npm run package"
    ],
    "after:release": "npx vsce publish"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
